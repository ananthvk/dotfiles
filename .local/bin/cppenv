alias build="\
ASAN_OPTIONS=strict_string_checks=1:detect_stack_use_after_return=1:check_initialization_order=1:strict_init_order=1:detect_leaks=1 \
clang++ -Wall \
-Wformat=2 \
-Wshadow \
-Wfloat-equal \
-Wshift-overflow \
-Wextra \
-Wconversion \
-Wsign-conversion \
-Wcast-align \
-pedantic \
-gdwarf-4 \
-O1 \
-fsanitize=integer,address,undefined,integer-divide-by-zero,shift,null,return,signed-integer-overflow,float-divide-by-zero,float-cast-overflow,bounds,alignment,vptr,leak,object-size,enum,unreachable \
-pedantic \
-Wno-sign-compare \
-Wno-unused-parameter \
-Wno-sign-conversion \
-ftrapv \
-D_GLIBCXX_DEBUG \
-D_GLIBCXX_DEBUG_PEDANTIC \
-D_FORTIFY_SOURCE=2 \
-fstack-protector \
-Wpointer-arith \
-Wcast-qual \
-Wstrict-overflow \
-Wstrict-aliasing \
-g3 \
-Wnon-virtual-dtor \
-Wold-style-cast \
-Woverloaded-virtual \
-Wnull-dereference \
-Wdouble-promotion \
"
