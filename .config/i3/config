# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        position top
        separator_symbol ""
        workspace_min_width 40 px
        # top right bottom left
        padding 2px 8px 2px 8px
        colors{
            background $gruv_bg_statusline2
            #                      border                background                  text
            focused_workspace      $gruv_bg_statusline1  $gruv_bg_statusline1        $gruv_green
            inactive_workspace     $gruv_bg_statusline2  $gruv_bg_statusline2        $gruv_grey0
            urgent_workspace       $gruv_red             $gruv_red                   #ffffff
            separator $gruv_blue
            statusline $gruv_fg0
        }
}


